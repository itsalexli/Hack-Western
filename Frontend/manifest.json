{
  "manifest_version": 3,
  "name": "GentlePage",
  "version": "1.0.0",
  "permissions": ["microphone", "scripting", "activeTab"],

  "web_accessible_resources": [
    {
      "resources": [
        "eleven-panel.html",
        "dist/eleven-agent.js",
        "dist/rawAudioProcessor.worklet.js",
        "dist/audioConcatProcessor.worklet.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
